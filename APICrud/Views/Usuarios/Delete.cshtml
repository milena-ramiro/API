@model APICrud.Models.Entidades.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">

           
            @if (Model.Tipo == 1)
            {
                <label>Administrador</label>
            }
            else if (Model.Tipo == 2)
            {
                <label>Programador</label>
            }
            else if (Model.Tipo == 3)
            {
                <label>Advogado</label>
            }
            else if (Model.Tipo == 4)
            {
                <label>Tecnico</label>
            }
            else if (Model.Tipo == 5)
            {
                <label>Secretaria</label>
            }
            else if (Model.Tipo == 6)
            {
                <label>Colaborador</label>
            }


        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
